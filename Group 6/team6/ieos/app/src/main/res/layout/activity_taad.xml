<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView android:id="@+id/txtSpeechResult"
        android:text="@string/result"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/txtServerResult"
        android:text="@string/server_result"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button android:id="@+id/btnStreaming"
        android:text="@string/streaming"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button android:id="@+id/btnSpeechRecognition"
        android:text="@string/speechrecognition"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
